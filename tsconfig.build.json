{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/__tests__/**"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "fileExtensions": {
        "mappings": {
          ".js": [".ts", ".tsx"]
        }
      }
    }
  }
}
